<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Admin login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
  </head>
  <style media="screen">
      #content { max-width:450px; margin-top:100px; }
  </style>
  <body>
    <div class="">
        <div class="container" id="content">
        <div class="text-center" style="margin-bottom:20px;">
          <img  style="max-width:300px;" src="{{ asset('assets/images/logo.png') }}" >
        </div>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.login) }}
            {{ form_widget(form.login, {'attr' : {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.password) }}
            {{ form_widget(form.password, {'attr' : {'class': 'form-control'}}) }}
        </div>

        <div class="">
          {% for message in app.flashes('error') %}
          <div class="alert alert-danger" role="alert">{{ message }}</div>
          {% endfor %}
        </div>

        {{ form_widget(form.submit, {'attr' : {'class': 'btn btn-info btn-block' }}) }}

        {{ form_end(form) }}
        </div>
    </div>
  </body>
</html>
