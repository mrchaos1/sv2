<!-- Modal -->
<div class="modal fade" id="bookModal" tabindex="-1" role="dialog" aria-labelledby="bookModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="bookModallLabel">Забронировать номер</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      {{ form_start(bookForm, {'attr' : { 'id': 'js-book-form'} }) }}
      <div class="modal-body bg-1">
          <div class="form-row">
            <div class="col form-group">
              {{ form_widget(bookForm.dateCome, {'attr': {'class': 'js-date-from form-control datepicker', 'placeholder': 'Дата заезда' }}) }}
            </div>
            <div class="col form-group">
              {{ form_widget(bookForm.dateLeft, {'attr': {'class': 'js-date-to form-control datepicker', 'placeholder': 'Дата выезда' }}) }}
            </div>
          </div>

          <div class="form-group">
              {{ form_widget(bookForm.rooms, {'attr': {'class': 'js-room form-control', 'placeholder': 'Выберите номер' }}) }}
          </div>

          <div class="form-group">
              {{ form_widget(bookForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Ваше имя' }}) }}
          </div>
          <div class="form-group">
              {{ form_widget(bookForm.phone, {'attr': {'class': 'form-control', 'placeholder': 'Ваш номер телефона' }}) }}
          </div>
          <div class="form-group">
              {{ form_widget(bookForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Ваш E-Mail' }}) }}
          </div>

          <div class="form-group">
              {{ form_widget(bookForm.comment, {'attr': {'style': 'height:auto;', 'rows': '3', 'class': 'form-control', 'placeholder': 'Комментарий' }}) }}
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
        {{ form_widget(bookForm.submit, {'attr': {'class': 'btn btn-primary' }}) }}

      </div>

      {{ form_end(bookForm) }}

    </div>
  </div>
</div>
